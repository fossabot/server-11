generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model AccessToken {
  userId           String   @db.Char(64)
  createdAt        DateTime @default(now())
  expiredAt        DateTime
  refreshExpiredAt DateTime
  token            String   @id @db.Char(128)

  @@index([createdAt])
  @@index([expiredAt])
  @@index([refreshExpiredAt])
  @@index([userId])
}

model Comment {
  id        String   @id @db.Char(64)
  body      String   @db.Text
  userId    String   @db.Char(64)
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([userId])
}

model Configuration {
  key   String @id @db.VarChar(199)
  value Json
}

model Moment {
  id        String   @id @db.Char(64)
  userId    String   @db.Char(64)
  title     String?  @db.VarChar(199)
  body      String?  @db.Text
  media     Json?
  createdAt DateTime @default(now())

  @@index([userId])
}

model User {
  id        String   @id @db.Char(64)
  name      String?  @unique @db.VarChar(199)
  phone     String?  @unique @db.VarChar(199)
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([name])
  @@index([phone])
}

model CommentOnMoment {
  commentId String   @db.Char(64)
  momentId  String   @db.Char(64)
  createdAt DateTime @default(now())

  @@id([commentId, momentId])
  @@index([createdAt])
  @@index([momentId])
  @@index([commentId])
}

model UserLikeOnMoment {
  userId    String   @db.Char(64)
  momentId  String   @db.Char(64)
  createdAt DateTime @default(now())

  @@id([userId, momentId])
  @@index([createdAt])
  @@index([momentId])
  @@index([userId])
}

model UserProfile {
  userId   String             @id @db.Char(64)
  avatar   String?            @db.VarChar(199)
  name     String?            @db.VarChar(100)
  bio      String?            @db.Text
  birthday Int?
  gender   UserProfile_gender @default(unknown)

  @@index([birthday])
  @@index([gender])
  @@index([name])
}

model UserStarOnMoment {
  userId    String   @db.Char(64)
  momentId  String   @db.Char(64)
  createdAt DateTime @default(now())

  @@id([userId, momentId])
  @@index([createdAt])
  @@index([momentId])
  @@index([userId])
}

model VerificationCode {
  id        String   @id @db.Char(64)
  phone     String   @db.VarChar(199)
  code      String   @db.VarChar(50)
  createdAt DateTime @default(now())
  expiredAt DateTime

  @@unique([phone, code])
  @@index([createdAt])
  @@index([expiredAt])
  @@index([phone])
}

enum UserProfile_gender {
  woman
  man
  unknown
}
